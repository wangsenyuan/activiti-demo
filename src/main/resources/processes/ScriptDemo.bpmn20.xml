    <scriptTask id="scripttask1" name="Script Task" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>
				def sum = 0
				for (i = 0; i &lt;3; i++) {
					sum += i
				}
				execution.setVariable("sum", sum)
			</script>
    </scriptTask>
    <sequenceFlow id="flow2" sourceRef="start" targetRef="scripttask1"></sequenceFlow>
    <scriptTask id="scripttask2" name="Script Task" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>
      execution.getVariable("ctx").put("sum", sum);
			</script>
    </scriptTask>
    <sequenceFlow id="flow3" sourceRef="scripttask1" targetRef="scripttask2"></sequenceFlow>
    <sequenceFlow id="flow4" sourceRef="scripttask2" targetRef="endevent2"></sequenceFlow>
  </process>
